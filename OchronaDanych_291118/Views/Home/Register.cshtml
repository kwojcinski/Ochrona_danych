@model OchronaDanych_291118.Models.UserViewModel
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OchronaDanych_291118</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/Home/Register.js"></script>
    <link href="~/css/Home/Register.css" rel="stylesheet" />
    <title>Rejestracja</title>
</head>
<body>
    @{
        ViewData["Title"] = "Rejestracja";
    }
    <form action="/Home/Register" method="post" onsubmit="return validateForm();">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" id="email" name="Email" type="text" oninput="onFunction(1)" />
            @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color: red; font-weight: bold;" })
        </div>
        <div class="form-group">
            <label>Login</label>
            <input class="form-control" id="login" name="Login" type="text" oninput="onFunction(2)" />
            @Html.ValidationMessageFor(m => m.Login, "", new { @style = "color: red; font-weight: bold;" })
        </div>
        <div class="form-group">
            <label>Hasło</label>
            <input class="form-control password" id="password" name="Password" type="password" oninput="onFunction(3)" /><img alt="Brak zdjęcia" src="~/images/closedEyeSmall.png" id="passwordSpan" class="showPasswordImage" onclick="showPassword('password')">
            @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color: red; font-weight: bold;" })
        </div>
        <div class="form-group">
            <label>Powtórzone hasło</label>
            <input class="form-control password" id="repeatPassword" name="RepeatPassword" type="password" oninput="onFunction(4)" /><img alt="Brak zdjęcia" src="~/images/closedEyeSmall.png" id="repeatPasswordSpan" class="showPasswordImage" onclick="showPassword('repeatPassword')">
            @Html.ValidationMessageFor(m => m.RepeatPassword, "", new { @style = "color: red; font-weight: bold;" })
        </div>
        <input id="submit" type="submit" class="button-submit" />
    </form>
</body>
</html>

